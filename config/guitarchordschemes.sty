% Documentation at http://mirrors.ibiblio.org/CTAN/macros/latex/contrib/guitarchordschemes/guitarchordschemes_en.pdf
\usepackage{guitarchordschemes}

% general parameters
\setchordscheme{
    rotate=-90,
    x-unit=2.5mm, % chord size, x
    y-unit=3mm, % chord size, y
    name-format=\bfseries, % chord name font
    name-below=true,
    finger-format=\bfseries%
    \footnotesize % fingering font
}

% Defining chords

%%% Acordes de Sol %%%
\newsavebox{\G}
\savebox{\G}
{
    \chordscheme[
        name = G,
%       position = 1,   %%% Donde empieza el acorde
%       barre = 1/1-6,  %%% Traste, rango de cuerdas
%       finger = {3/5}, %%% posicion, cuerda
        finger = {2/5}, %%% Pueden haber multiples dedos
        root = {3/6, 3/1},
        ring = {2,3,4}
    ]
}

\newsavebox{\Gm}
\savebox{\Gm}
{
    \chordscheme[
        name = Gm,
        position = 3,
        barre = 1/1-6,
        finger = {3/5},
        finger = {3/4}
    ]
}

